# Sample ~/.nsip_sif_data file
#
# Available config keys:
#   mysql_driver
#   mysql_database
#   mysql_host
#   mysql_port
#   mysql_user
#   mysql_password
#   data_dir
#   schema_dir

#
# A local db using the current login name and no password
#
# mysql_driver: dbi:mysql
# mysql_database: siftest01

#
# A local db specifying user, password and port
#
# mysql_driver: dbi:mysql
# mysql_database: siftest01
# mysql_port: 3306
# mysql_user: john
# mysql_password: 8jhguyg78 

#
# A remote db
#
# mysql_driver: dbi:mysql
# mysql_database: siftest01
# mysql_host: ec2-99-999-99-99.ap-southeast-2.compute.amazonaws.com
# mysql_user: john
# mysql_password: 8jhguyg78 

#
# Specify alternate locations for the data and schema directories
#
# data_dir: /tmp/data
# schema_dir: /tmp/schema
